@page "{id}"
@model BazeApoteka.Pages.DostupniLekoviModel
@{
}
    <form method="post">
      
        <h2>Ovo su lekovi koji su dostupni u  nasoj apoteci </h2>
        @foreach (BazeApoteka.Entiteti.Lek l in Model.LekoviApoteke)
        {
            <div>
                @l.Id
                @l.GenerickiNaziv
                @l.KomercijaniNaziv
                @l.Doza
                @l.Cena
            </div>
            <input type="submit" value="Obrisi" asp-page-handler="Obrisi" asp-route-id="@l.Id" />
            <input type="submit" value="Izmeni" asp-page="./IzmeniLek" /> <label>ovde sam napravila da ide na stranicu izmeni lek ali bi bilo bolje da napravimo da se prosledi id leka sledecoj stranici da nebi unosio id sam </label>
        }
        <br />
        <div>__________________________</div>
        <input type="submit" value="Nazad" asp-page="./Farmaceut" />
    </form>