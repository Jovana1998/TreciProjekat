@page "{id}"
@model BazeApoteka.Pages.DodajFarmaceutaModel
@{
    ViewData["Title"] = "DodajFarmaceuta";
}

    <form method="post">
        @if(Model.ok)
        {
        <input type="hidden" id="id" asp-for="@Model.Prosledjeno" />
        <div>Ime:</div>
        <input type="text" asp-for="@Model.Farmaceut.Ime" />
        <div>Prezime:</div>
        <input type="text" asp-for="@Model.Farmaceut.Prezime" />
        <div>Plata:</div>
        <input type="text" asp-for="@Model.Farmaceut.Plata" />

        <input type="submit" value="Dodaj" asp-page-handler="Dodaj" asp-route-pom="@Model.Prosledjeno" />
        }
        else
        { 
        <div>Uspesno ste dodali farmaceuta @Model.Farmaceut.Ime, id: @Model.Farmaceut.Id</div>
        <input type="submit" asp-page="./DodajApoteku2" asp-route-id="@Model.Apoteka.Id.ToString()" value="Nazad"/>
        }
    </form>
